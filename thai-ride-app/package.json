{
  "name": "thai-ride-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=20.x"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:check": "vue-tsc -b && vite build",
    "build:analyze": "vite build && open dist/stats.html",
    "preview": "vite preview",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext .vue,.js,.ts",
    "lint:fix": "eslint src --ext .vue,.js,.ts --fix",
    "lint:secrets": "node scripts/check-secrets.js",
    "bundle:analyze": "npm run build && open dist/stats.html",
    "bundle:size": "npm run build && du -sh dist/* | sort -h",
    "prepare": "cd .. && husky install .husky || true",
    "docker:install": "bash scripts/install-docker.sh",
    "docker:check": "docker --version && docker compose version",
    "supabase:start": "npx supabase start",
    "supabase:stop": "npx supabase stop",
    "supabase:status": "npx supabase status",
    "supabase:reset": "npx supabase db reset",
    "supabase:push": "npx supabase db push",
    "supabase:types": "npx supabase gen types typescript --local > src/types/database.ts",
    "setup": "npm run docker:install && npm run supabase:start && npm run supabase:types",
    "dev:full": "npm run supabase:start && npm run dev",
    "test:rls": "node test-provider-job-visibility.js",
    "debug:jobs": "open debug-provider-jobs.html"
  },
  "lint-staged": {
    "*.{ts,js,vue,json}": [
      "node scripts/check-secrets.js"
    ]
  },
  "dependencies": {
    "@googlemaps/js-api-loader": "^2.0.2",
    "@heroicons/vue": "^2.2.0",
    "@sentry/vue": "^10.31.0",
    "@supabase/supabase-js": "^2.87.1",
    "@tailwindcss/typography": "^0.5.19",
    "@types/dompurify": "^3.0.5",
    "@types/leaflet": "^1.9.21",
    "@types/qrcode": "^1.5.6",
    "@vitest/ui": "^4.0.15",
    "@vueuse/core": "^14.1.0",
    "autoprefixer": "^10.4.23",
    "dompurify": "^3.3.1",
    "fast-check": "^4.4.0",
    "jsdom": "^27.3.0",
    "leaflet": "^1.9.4",
    "pinia": "^3.0.4",
    "postcss": "^8.5.6",
    "qrcode": "^1.5.4",
    "tailwindcss": "^4.1.18",
    "tesseract.js": "^7.0.0",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^4.0.15",
    "vue": "^3.5.24",
    "vue-router": "^4.6.4",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/google.maps": "^3.58.1",
    "@types/node": "^24.10.1",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.1",
    "eslint": "^9.17.0",
    "eslint-plugin-vue": "^9.32.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "rollup-plugin-visualizer": "^6.0.5",
    "supabase": "^2.72.6",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.51.0",
    "vite": "^7.2.4",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-vue-devtools": "^8.0.5",
    "vue-tsc": "^3.1.4"
  }
}
